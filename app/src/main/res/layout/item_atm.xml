<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/item_atm"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginBottom="6dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_weight="1"
        />

        <LinearLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/bancoNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lafise Bancentro"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tipoATM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ATM Full" />

            <TextView
                    android:id="@+id/localidadNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Metrocentro"
                    android:textStyle="italic" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/localidadLatitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-87.989898"
                        android:layout_weight="3"/>

                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <TextView
                        android:id="@+id/localidadLongitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11.123433"
                        android:layout_weight="3"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>